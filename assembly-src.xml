<?xml version="1.0" encoding="UTF-8"?>
<assembly>
  <id>src</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <baseDirectory>portofino-${project.version}-src</baseDirectory>
  <fileSets>
    <fileSet>
      <directory>${basedir}</directory>
      <useDefaultExcludes>false</useDefaultExcludes>
      <excludes>
        <exclude>.hg/**</exclude>
        <exclude>.git/**</exclude>
        <exclude>.classpath</exclude>
        <exclude>.project</exclude>
        <exclude>.settings</exclude>
        <exclude>.idea/**</exclude>
        <exclude>*.iml</exclude>
        <exclude>*.versionsBackup</exclude>
        <exclude>*.orig</exclude>
        <exclude>**/target/**</exclude>
        <exclude>.DS_Store</exclude>
        <exclude>Thumbs.db</exclude>
        <exclude>oneclick/local.*</exclude>
        <exclude>oneclick/build/**</exclude>

        <exclude>ui/dist/**</exclude>
        <exclude>ui/dist-server/**</exclude>
        <exclude>ui/tmp/**</exclude>
        <exclude>ui/out-tsc/**</exclude>
        <exclude>ui/node/**</exclude>
        <exclude>ui/node_modules/**</exclude>
        <exclude>ui/.sass-cache/**</exclude>
        <exclude>ui/connect.lock</exclude>
        <exclude>ui/coverage/**</exclude>
        <exclude>ui/libpeerconnection.log</exclude>
        <exclude>ui/npm-debug.log</exclude>
        <exclude>ui/yarn-error.log</exclude>
        <exclude>ui/testem.log</exclude>
        <exclude>ui/typings/**</exclude>
        <exclude>ui/e2e/*.js</exclude>
        <exclude>ui/e2e/*.map</exclude>

        <exclude>demo-tt/src/main/frontend/dist/**</exclude>
        <exclude>demo-tt/src/main/frontend/dist-server/**</exclude>
        <exclude>demo-tt/src/main/frontend/tmp/**</exclude>
        <exclude>demo-tt/src/main/frontend/out-tsc/**</exclude>
        <exclude>demo-tt/src/main/frontend/node/**</exclude>
        <exclude>demo-tt/src/main/frontend/node_modules/**</exclude>
        <exclude>demo-tt/src/main/frontend/.sass-cache</exclude>
        <exclude>demo-tt/src/main/frontend/connect.lock</exclude>
        <exclude>demo-tt/src/main/frontend/coverage/**</exclude>
        <exclude>demo-tt/src/main/frontend/libpeerconnection.log</exclude>
        <exclude>demo-tt/src/main/frontend/npm-debug.log</exclude>
        <exclude>demo-tt/src/main/frontend/yarn-error.log</exclude>
        <exclude>demo-tt/src/main/frontend/testem.log</exclude>
        <exclude>demo-tt/src/main/frontend/typings/**</exclude>
        <exclude>demo-tt/src/main/frontend/e2e/*.js</exclude>
        <exclude>demo-tt/src/main/frontend/e2e/*.map</exclude>
      </excludes>
      <fileMode>0644</fileMode>
      <directoryMode>0755</directoryMode>
    </fileSet>
  </fileSets>
</assembly>
