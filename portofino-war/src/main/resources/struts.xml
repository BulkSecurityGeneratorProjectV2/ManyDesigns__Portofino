<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <constant name="struts.i18n" value="ISO-8859-1" />
    <constant name="struts.i18n.encoding" value="ISO-8859-1" />
    <constant name="struts.custom.i18n.resources"
              value="com.manydesigns.elements.messages" />
    <constant name="struts.enable.SlashesInActionNames" value="true"/>
    <constant name="struts.mapper.alwaysSelectFullNamespace" value="false"/>
    <constant name="struts.ognl.allowStaticMethodAccess" value="true"/>
    <constant name="struts.ui.theme" value="simple"/>

    <package name="portofino-default" extends="struts-default" abstract="true">
        <interceptors>
            <interceptor name="elements-struts2"
                         class="com.manydesigns.elements.struts2.ElementsInterceptor" />
            <interceptor name="portofino"
                         class="com.manydesigns.portofino.interceptors.PortofinoInterceptor" />
            <interceptor-stack name="mdstack">
                <interceptor-ref name="defaultStack" />
                <interceptor-ref name="elements-struts2" />
                <interceptor-ref name="portofino" />
            </interceptor-stack>
        </interceptors>
        <default-interceptor-ref name="mdstack"/>
        <global-results>
            <result name="unauthorized" type="httpheader">
                <param name="error">410</param>
                <param name="errorMessage">${errorMessage}</param>
            </result>
            <result name="400" type="httpheader">
                <param name="error">400</param>
                <param name="errorMessage">${errorMessage}</param>
            </result>
            <result name="403" type="httpheader">
                <param name="error">403</param>
                <param name="errorMessage">${errorMessage}</param>
            </result>
            <result name="500" type="httpheader">
                <param name="error">500</param>
                <param name="errorMessage">${errorMessage}</param>
            </result>
        </global-results>
    </package>

    <package name="portofino" extends="portofino-default" namespace="/">
        <action name="Homepage" class="com.manydesigns.portofino.actions.Homepage">
            <result name="success">/skins/%{skin}/homepage.jsp</result>
        </action>
        <action name="*/Table"
                class="com.manydesigns.portofino.actions.TableAction">
            <param name="skin">default</param>
            <param name="qualifiedTableName">{1}</param>
            <result name="search">/skins/%{skin}/search.jsp</result>
            <result name="read">/skins/%{skin}/read.jsp</result>
            <result name="create">/skins/%{skin}/create.jsp</result>
            <result name="save" type="redirectAction">
                <param name="actionName">%{qualifiedTableName}/Table</param>
                <param name="namespace">/</param>
                <param name="pk">%{pk}</param>
            </result>
            <result name="edit">/skins/%{skin}/edit.jsp</result>
            <result name="update" type="redirectAction">
                <param name="actionName">%{qualifiedTableName}/Table</param>
                <param name="namespace">/</param>
                <param name="pk">%{pk}</param>
            </result>
            <result name="cancelCreate" type="redirectAction">
                <param name="actionName">%{qualifiedTableName}/Table</param>
                <param name="namespace">/</param>
            </result>
            <result name="cancelEdit" type="redirectAction">
                <param name="actionName">%{qualifiedTableName}/Table</param>
                <param name="namespace">/</param>
                <param name="pk">%{pk}</param>
            </result>
            <result name="returnToSearch" type="redirectAction">
                <param name="actionName">%{qualifiedTableName}/Table</param>
                <param name="namespace">/</param>
            </result>
            <result name="delete" type="redirectAction">
                <param name="actionName">%{qualifiedTableName}/Table</param>
                <param name="namespace">/</param>
            </result>
        </action>
    </package>

    <package name="portofino-upstairs" extends="portofino-default" namespace="/upstairs">
        <action name="ServerInfo"
                class="com.manydesigns.portofino.actions.upstaits.ServerInfoAction">
            <result name="success">/upstairs/serverInfo.jsp</result>
        </action>
        <action name="Logs"
                class="com.manydesigns.portofino.actions.upstaits.LogsAction">
            <result name="success">/upstairs/logs.jsp</result>
        </action>
    </package>
</struts>