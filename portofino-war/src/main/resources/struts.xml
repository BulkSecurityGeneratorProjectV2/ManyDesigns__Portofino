<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <!--
    ****************************************************************************
    Common settings
    ****************************************************************************
    -->

    <package name="portofino-default" extends="struts-default" abstract="true">

        <interceptors>
            <interceptor name="elements-struts2"
                         class="com.manydesigns.elements.struts2.ElementsInterceptor" />
            <interceptor name="portofino"
                         class="com.manydesigns.portofino.interceptors.PortofinoInterceptor" />
            <interceptor-stack name="mdstack">
                <interceptor-ref name="defaultStack" />
                <interceptor-ref name="elements-struts2" />
                <interceptor-ref name="portofino" />
            </interceptor-stack>
        </interceptors>
        <default-interceptor-ref name="mdstack"/>
        <global-results>
            <result name="unauthorized" type="httpheader">
                <param name="error">410</param>
                <param name="errorMessage">${errorMessage}</param>
            </result>
            <result name="400" type="httpheader">
                <param name="error">400</param>
                <param name="errorMessage">${errorMessage}</param>
            </result>
            <result name="403" type="httpheader">
                <param name="error">403</param>
                <param name="errorMessage">${errorMessage}</param>
            </result>
            <result name="404" type="httpheader">
                <param name="error">404</param>
                <param name="errorMessage">${errorMessage}</param>
            </result>
            <result name="500" type="httpheader">
                <param name="error">500</param>
                <param name="errorMessage">${errorMessage}</param>
            </result>
            <result name="login" type="redirectAction">
                <param name="actionName">Login</param>
                <param name="namespace">/user</param>  
            </result>
        </global-results>
    </package>


    <!--
    ****************************************************************************
    Operational functions (namespace='/')
    ****************************************************************************
    -->

    <package name="portofino" extends="portofino-default" namespace="/">
        <action name="Index"
                class="com.manydesigns.portofino.actions.IndexAction">
            <result name="success" type="redirect">
                <param name="location">${redirectUrl}</param>
                <param name="prependServletContext">false</param>
            </result>
        </action>
        <action name="Homepage"
                class="com.manydesigns.portofino.actions.HomepageAction">
            <result name="success">/skins/default/homepage.jsp</result>
        </action>

        <action name="UseCase"
                class="com.manydesigns.portofino.actions.UseCaseAction">
            <result name="redirectToUseCase" type="redirectAction">
                <param name="actionName">%{useCaseName}/UseCase</param>
            </result>
            <result name="noUseCases">/skins/default/useCase/noUseCases.jsp</result>
        </action>

        <action name="*/UseCase"
                class="com.manydesigns.portofino.actions.UseCaseAction">
            <param name="skin">default</param>
            <param name="useCaseName">{1}</param>

            <result name="search">/skins/default/useCase/search.jsp</result>

            <result name="read">/skins/default/useCase/read.jsp</result>

            <result name="create">/skins/default/useCase/create.jsp</result>

            <result name="save" type="redirectAction">
                <param name="actionName">%{useCaseName}/UseCase</param>
                <param name="pk">%{pk}</param>
            </result>

            <result name="edit">/skins/default/useCase/edit.jsp</result>

            <result name="update" type="redirectAction">
                <param name="actionName">%{useCaseName}/UseCase</param>
                <param name="pk">%{pk}</param>
                <param name="searchString">%{searchString}</param>
            </result>

            <result name="bulkEdit">/skins/default/useCase/bulkEdit.jsp</result>

            <result name="bulkUpdate" type="redirectAction">
                <param name="actionName">%{useCaseName}/UseCase</param>
                <param name="searchString">%{searchString}</param>
            </result>

            <result name="returnToSearch" type="redirectAction">
                <param name="actionName">%{useCaseName}/UseCase</param>
                <param name="searchString">%{searchString}</param>
            </result>

            <result name="delete" type="redirectAction">
                <param name="actionName">%{useCaseName}/UseCase</param>
                <param name="searchString">%{searchString}</param>
            </result>

            <result name="cancel" type="redirect">
                <param name="location">${cancelReturnUrl}</param>
                <param name="prependServletContext">false</param>
            </result>
        </action>

    </package>


    <!--
    ****************************************************************************
    Modeling (namespace='/model')
    ****************************************************************************
    -->

    <package name="portofino-model" extends="portofino-default" namespace="/model">
        <action name="Index">
            <result name="success" type="redirectAction">
                <param name="actionName">ConnectionProviders</param>
            </result>
        </action>
        <action name="ConnectionProviders"
                class="com.manydesigns.portofino.actions.model.ConnectionProvidersAction">
            <result name="list">/skins/default/model/connectionProviders/list.jsp</result>
            <result name="read">/skins/default/model/connectionProviders/read.jsp</result>
            <result name="returnToList" type="redirectAction">
                <param name="actionName">ConnectionProviders</param>
            </result>
            <result name="returnToRead" type="redirectAction">
                <param name="actionName">ConnectionProviders</param>
                <param name="databaseName">%{databaseName}</param>
            </result>
        </action>
        
        <action name="TableData"
                class="com.manydesigns.portofino.actions.model.TableDataAction">
            <result name="redirectToTable" type="redirectAction">
                <param name="actionName">%{qualifiedTableName}/TableData</param>
            </result>
        </action>

        <action name="*/TableData"
                class="com.manydesigns.portofino.actions.model.TableDataAction">
            <param name="skin">default</param>
            <param name="qualifiedTableName">{1}</param>

            <result name="search">/skins/default/model/tableData/search.jsp</result>

            <result name="read">/skins/default/model/tableData/read.jsp</result>

            <result name="create">/skins/default/model/tableData/create.jsp</result>

            <result name="save" type="redirectAction">
                <param name="actionName">%{qualifiedTableName}/TableData</param>
                <param name="pk">%{pk}</param>
            </result>

            <result name="edit">/skins/default/model/tableData/edit.jsp</result>

            <result name="update" type="redirectAction">
                <param name="actionName">%{qualifiedTableName}/TableData</param>
                <param name="pk">%{pk}</param>
                <param name="searchString">%{searchString}</param>
            </result>

            <result name="bulkEdit">/skins/default/model/tableData/bulkEdit.jsp</result>

            <result name="bulkUpdate" type="redirectAction">
                <param name="actionName">%{qualifiedTableName}/TableData</param>
                <param name="searchString">%{searchString}</param>
            </result>

            <result name="returnToSearch" type="redirectAction">
                <param name="actionName">%{qualifiedTableName}/TableData</param>
                <param name="searchString">%{searchString}</param>
            </result>

            <result name="delete" type="redirectAction">
                <param name="actionName">%{qualifiedTableName}/TableData</param>
                <param name="searchString">%{searchString}</param>
            </result>

            <result name="cancel" type="redirect">
                <param name="location">${cancelReturnUrl}</param>
                <param name="prependServletContext">false</param>
            </result>

            <result name="export" type="stream">
                <param name="contentType">%{contentType}</param>
                <param name="contentLength">%{contentLength}</param>
                <param name="inputName">inputStream</param>
                <param name="contentDisposition">attachment;filename="%{fileName}"</param>
                <param name="bufferSize">1024</param>
            </result>
    
            
            <result name="jsonSelectFieldOptions" type="stream">
                <param name="contentType">text/plain</param>
                <param name="inputName">inputStream</param>
                <param name="bufferSize">1024</param>
            </result>
        </action>

        <action name="TableDesign"
                class="com.manydesigns.portofino.actions.model.TableDesignAction">
            <result name="redirectToTable" type="redirectAction">
                <param name="actionName">%{qualifiedTableName}/TableDesign</param>
            </result>
        </action>
        <action name="*/TableDesign"
                class="com.manydesigns.portofino.actions.model.TableDesignAction">
            <param name="skin">default</param>
            <param name="qualifiedTableName">{1}</param>

            <result name="summary">/skins/default/model/tableDesign/summary.jsp</result>

            <result name="cancel" type="redirect">
                <param name="location">${cancelReturnUrl}</param>
                <param name="prependServletContext">false</param>
            </result>
        </action>

        <action name="PrintModel"
                class="com.manydesigns.portofino.actions.model.ModelWriterAction">
            <result name="success" type="stream">
                <param name="contentType">%{contentType}</param>
                <param name="contentDisposition">%{contentDisposition}</param>
                <param name="inputName">inputStream</param>
                <param name="bufferSize">1024</param>
            </result>
        </action>
        <action name="SelfTest"
                class="com.manydesigns.portofino.actions.model.SelfTestAction">
            <result name="success">/skins/default/model/selfTest.jsp</result>
        </action>
        <action name="SiteMap"
                class="com.manydesigns.portofino.actions.model.SiteMap">
            <result name="success">/skins/default/model/siteMap.jsp</result>
        </action>

        <action name="DDLWriter"
                class="com.manydesigns.portofino.actions.model.DDLWriterAction">
            <result name="success">/skins/default/model/ddl.jsp</result>
        </action>

        <action name="PortletDesign"
                class="com.manydesigns.portofino.actions.model.PortletDesignAction">
            <result name="redirectToPortlet" type="redirectAction">
                <param name="actionName">%{portletName}/PortletDesign</param>
            </result>
        </action>
        <action name="*/PortletDesign"
                class="com.manydesigns.portofino.actions.model.PortletDesignAction">
            <param name="skin">default</param>
            <param name="portletName">{1}</param>

            <result name="summary">/skins/default/model/portletDesign/summary.jsp</result>

            <result name="cancel" type="redirect">
                <param name="location">${cancelReturnUrl}</param>
                <param name="prependServletContext">false</param>
            </result>

            <result name="chart" type="stream">
               <param name="contentType">image/png</param>
               <param name="inputName">inputStream</param>
               <param name="bufferSize">4096</param>
               <param name="contentDisposition">filename="%{fileName}"</param>
             </result>

        </action>

    </package>


    <!--
    ****************************************************************************
    System admin (namespace='/system-admin')
    ****************************************************************************
    -->

    <package name="portofino-system-admin" extends="portofino-default" namespace="/system-admin">
        <action name="Index">
            <result name="success" type="redirectAction">
                <param name="actionName">ServerInfo</param>
            </result>
        </action>
        <action name="ServerInfo"
                class="com.manydesigns.portofino.actions.systemadmin.ServerInfoAction">
            <result name="success">/skins/default/system-admin/serverInfo.jsp</result>
        </action>
        <action name="ConfigurationProperties"
                class="com.manydesigns.portofino.actions.systemadmin.ConfigurationPropertiesAction">
            <result name="portofinoProperties">/skins/default/system-admin/portofinoProperties.jsp</result>
            <result name="elementsProperties">/skins/default/system-admin/elementsProperties.jsp</result>
            <result name="systemProperties">/skins/default/system-admin/systemProperties.jsp</result>
        </action>
        <action name="Logs"
                class="com.manydesigns.portofino.actions.systemadmin.LogsAction">
            <result name="success">/skins/default/system-admin/logs.jsp</result>
        </action>
    </package>

    
    <!--
    ****************************************************************************
    User functions (namespace='/user')
    ****************************************************************************
    -->

    <package name="portofino-user" extends="portofino-default" namespace="/user">
        <action name="Index">
            <result name="success" type="redirectAction">
                <param name="actionName">Profile</param>
            </result>
        </action>
        <action name="Profile" class="com.manydesigns.portofino.actions.user.ProfileAction">
            <result name="read">
                /skins/default/user/profile/read.jsp
            </result>
            <result name="edit">
                /skins/default/user/profile/edit.jsp
            </result>
            <result name="update" type="redirectAction">
                <param name="actionName">Profile</param>
            </result>
            <result name="changePwd">
                /skins/default/user/profile/changePwd.jsp
            </result>
            <result name="updatePwd" type="redirectAction">
                <param name="actionName">Profile</param>
            </result>
        </action>
        <action name="PwdRecovery" class="com.manydesigns.portofino.actions.user.PwdRecoveryAction">
            <result name="input">
                /skins/default/user/passwordRecovery.jsp
            </result>
            <result name="success" type="redirectAction">
                <param name="actionName">Login</param>
                <param name="namespace">/user</param>
            </result>
        </action>
        <action name="LostPasswordChange" class="com.manydesigns.portofino.actions.user.LostPwdChangeAction">
            <result name="input">/skins/default/user/lostPwdChange.jsp</result>
            <result name="success" type="redirectAction">
                <param name="actionName">Homepage</param>
                <param name="namespace">/</param>
            </result>
        </action>
        
        <action name="Settings" class="com.manydesigns.portofino.actions.user.SettingsAction">
            <result name="success">/skins/default/user/settings.jsp</result>
        </action>

        <action name="Help" class="com.manydesigns.portofino.actions.user.HelpAction">
            <result name="success">/skins/default/user/help.jsp</result>
        </action>
        <action name="Login" class="com.manydesigns.portofino.actions.user.LoginAction">
            <result name="input">/skins/default/user/login.jsp</result>
            <result name="success" type="redirectAction">
                <param name="actionName">Homepage</param>
                <param name="namespace">/</param>
            </result>
        </action>
    </package>

    <!--
    ****************************************************************************
    User Administration functions (namespace='/user-admin')
    ****************************************************************************
    -->

    <package name="portofino-useradmin" extends="portofino-default" namespace="/user-admin">
        <action name="Index">
            <result name="success" type="redirectAction">
                <param name="actionName">UsersAction</param>
            </result>
        </action>
        <action name="UsersAction" class="com.manydesigns.portofino.actions.user.admin.UserAction">
            <result name="search">/skins/default/user/admin/search.jsp</result>

            <result name="read">/skins/default/user/admin/read.jsp</result>

            <result name="create">/skins/default/user/admin/create.jsp</result>

            <result name="save" type="redirectAction">
                <param name="actionName">UsersAction</param>
                <param name="namespace">/user-admin</param>
                <param name="pk">%{pk}</param>
            </result>

            <result name="edit">/skins/default/user/admin/edit.jsp</result>

            <result name="update" type="redirectAction">
                <param name="actionName">UsersAction</param>
                <param name="namespace">/user-admin</param>
                <param name="pk">%{pk}</param>
                <param name="searchString">%{searchString}</param>
            </result>


            <result name="returnToSearch" type="redirectAction">
                <param name="actionName">UsersAction</param>
                <param name="namespace">/user-admin</param>
                <param name="searchString">%{searchString}</param>
            </result>

            <result name="delete" type="redirectAction">
                <param name="actionName">UsersAction</param>
                <param name="namespace">/user-admin</param>
                <param name="searchString">%{searchString}</param>
            </result>

            <result name="cancel" type="redirect">
                <param name="location">${cancelReturnUrl}</param>
                <param name="prependServletContext">false</param>
            </result>

            <result name="export" type="stream">
                <param name="contentType">%{contentType}</param>
                <param name="contentLength">%{contentLength}</param>
                <param name="inputName">inputStream</param>
                <param name="contentDisposition">attachment;filename="%{fileName}"</param>
                <param name="bufferSize">1024</param>
            </result>


            <result name="jsonSelectFieldOptions" type="stream">
                <param name="contentType">text/plain</param>
                <param name="inputName">inputStream</param>
                <param name="bufferSize">1024</param>
            </result>

        </action>
    </package>

</struts>