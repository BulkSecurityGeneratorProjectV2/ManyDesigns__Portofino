<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <package name="portofino-default" extends="struts-default" abstract="true">
        <interceptors>
            <interceptor name="elements-struts2"
                         class="com.manydesigns.elements.struts2.ElementsInterceptor" />
            <interceptor name="portofino"
                         class="com.manydesigns.portofino.interceptors.PortofinoInterceptor" />
            <interceptor-stack name="mdstack">
                <interceptor-ref name="defaultStack" />
                <interceptor-ref name="elements-struts2" />
                <interceptor-ref name="portofino" />
            </interceptor-stack>
        </interceptors>
        <default-interceptor-ref name="mdstack"/>
        <global-results>
            <result name="unauthorized" type="httpheader">
                <param name="error">410</param>
                <param name="errorMessage">${errorMessage}</param>
            </result>
            <result name="400" type="httpheader">
                <param name="error">400</param>
                <param name="errorMessage">${errorMessage}</param>
            </result>
            <result name="403" type="httpheader">
                <param name="error">403</param>
                <param name="errorMessage">${errorMessage}</param>
            </result>
            <result name="500" type="httpheader">
                <param name="error">500</param>
                <param name="errorMessage">${errorMessage}</param>
            </result>
        </global-results>
    </package>

    <package name="portofino" extends="portofino-default" namespace="/">
        <action name="Homepage" class="com.manydesigns.portofino.actions.HomepageAction">
            <result name="success">/skins/%{skin}/homepage.jsp</result>
        </action>
        
        <action name="TableData"
                class="com.manydesigns.portofino.actions.TableDataAction">
            <result name="redirectToTable" type="redirectAction">
                <param name="actionName">%{qualifiedTableName}/TableData</param>
                <param name="namespace">/</param>
            </result>
        </action>

        <action name="*/TableData"
                class="com.manydesigns.portofino.actions.TableDataAction">
            <param name="skin">default</param>
            <param name="qualifiedTableName">{1}</param>

            <result name="search">/skins/%{skin}/tableData/search.jsp</result>

            <result name="read">/skins/%{skin}/tableData/read.jsp</result>

            <result name="create">/skins/%{skin}/tableData/create.jsp</result>

            <result name="save" type="redirectAction">
                <param name="actionName">%{qualifiedTableName}/TableData</param>
                <param name="namespace">/</param>
                <param name="pk">%{pk}</param>
            </result>

            <result name="edit">/skins/%{skin}/tableData/edit.jsp</result>

            <result name="update" type="redirectAction">
                <param name="actionName">%{qualifiedTableName}/TableData</param>
                <param name="namespace">/</param>
                <param name="pk">%{pk}</param>
                <param name="searchString">%{searchString}</param>
            </result>

            <result name="bulkEdit">/skins/%{skin}/tableData/bulkEdit.jsp</result>

            <result name="bulkUpdate" type="redirectAction">
                <param name="actionName">%{qualifiedTableName}/TableData</param>
                <param name="namespace">/</param>
                <param name="searchString">%{searchString}</param>
            </result>

            <result name="returnToSearch" type="redirectAction">
                <param name="actionName">%{qualifiedTableName}/TableData</param>
                <param name="namespace">/</param>
                <param name="searchString">%{searchString}</param>
            </result>

            <result name="delete" type="redirectAction">
                <param name="actionName">%{qualifiedTableName}/TableData</param>
                <param name="namespace">/</param>
                <param name="searchString">%{searchString}</param>
            </result>

            <result name="cancel" type="redirect">
                <param name="location">${cancelReturnUrl}</param>
                <param name="prependServletContext">false</param>
            </result>
        </action>

        <action name="TableDesign"
                class="com.manydesigns.portofino.actions.TableDesignAction">
            <result name="redirectToTable" type="redirectAction">
                <param name="actionName">%{qualifiedTableName}/TableDesign</param>
                <param name="namespace">/</param>
            </result>
        </action>

        <action name="*/TableDesign"
                class="com.manydesigns.portofino.actions.TableDesignAction">
            <param name="skin">default</param>
            <param name="qualifiedTableName">{1}</param>

            <result name="summary">/skins/%{skin}/tableDesign/summary.jsp</result>

            <result name="cancel" type="redirect">
                <param name="location">${cancelReturnUrl}</param>
                <param name="prependServletContext">false</param>
            </result>
        </action>

        <!-- User management -->

        <action name="Profile" class="com.manydesigns.portofino.actions.ProfileAction">
            <result name="success">/skins/%{skin}/user/profile.jsp</result>
        </action>

        <action name="Settings" class="com.manydesigns.portofino.actions.SettingsAction">
            <result name="success">/skins/%{skin}/user/settings.jsp</result>
        </action>

        <!-- Help -->

        <action name="Help" class="com.manydesigns.portofino.actions.HelpAction">
            <result name="success">/skins/%{skin}/user/help.jsp</result>
        </action>

    </package>

    <package name="portofino-upstairs" extends="portofino-default" namespace="/upstairs">
        <action name="Homepage">
            <result name="success" type="redirectAction">
                <param name="namespace">/upstairs</param>
                <param name="actionName">ServerInfo</param>
            </result>
        </action>
        <action name="ServerInfo"
                class="com.manydesigns.portofino.actions.upstairs.ServerInfoAction">
            <result name="success">/skins/default/upstairs/serverInfo.jsp</result>
        </action>
        <action name="ConnectionProviders"
                class="com.manydesigns.portofino.actions.upstairs.ConnectionProvidersAction">
            <result name="list">/skins/default/upstairs/connectionProviders/list.jsp</result>
            <result name="read">/skins/default/upstairs/connectionProviders/read.jsp</result>
            <result name="returnToList" type="redirectAction">
                <param name="actionName">ConnectionProviders</param>
                <param name="namespace">/upstairs</param>
            </result>
            <result name="returnToRead" type="redirectAction">
                <param name="actionName">ConnectionProviders</param>
                <param name="namespace">/upstairs</param>
                <param name="databaseName">%{databaseName}</param>
            </result>
        </action>
        <action name="Logs"
                class="com.manydesigns.portofino.actions.upstairs.LogsAction">
            <result name="success">/skins/default/upstairs/logs.jsp</result>
        </action>
        <action name="ConfigurationProperties"
                class="com.manydesigns.portofino.actions.upstairs.ConfigurationPropertiesAction">
            <result name="success">/skins/default/upstairs/configurationProperties.jsp</result>
        </action>
        <action name="PrintModel" class="com.manydesigns.portofino.actions.upstairs.ModelWriterAction">
            <result name="success" type="stream">
                <param name="contentType">%{contentType}</param>
                <param name="contentDisposition">%{contentDisposition}</param>
                <param name="inputName">inputStream</param>
                <param name="bufferSize">1024</param>
            </result>
        </action>
        <action name="SelfTest"
                class="com.manydesigns.portofino.actions.upstairs.SelfTestAction">
            <result name="success">/skins/default/upstairs/selfTest.jsp</result>
        </action>
    </package>
</struts>