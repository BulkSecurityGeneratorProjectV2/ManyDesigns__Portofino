<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>portofino-demo-tt-docker</id>
    <files>
        <file>
            <source>${project.build.directory}/${project.name}-${project.version}.war</source>
            <destName>ROOT.war</destName>
        </file>
        <file>
            <source>${project.basedir}/src/main/docker/server/portofino-local.properties</source>
        </file>
    </files>
    <dependencySets>
        <dependencySet>
            <includes>
                <include>org.postgresql:postgresql</include>
            </includes>
            <scope>provided</scope>
        </dependencySet>
    </dependencySets>
</assembly>
