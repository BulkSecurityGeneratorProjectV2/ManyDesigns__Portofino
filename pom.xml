<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.manydesigns</groupId>
    <artifactId>portofino</artifactId>
    <packaging>pom</packaging>
    <version>4.0.beta3</version>
    <name>manydesigns-portofino</name>
    <url>http://www.manydesigns.com/</url> 
    <properties>
        <servlet.api.version>2.4</servlet.api.version><!--Struts2/Xwork uses 2.4 - JFreeChart uses 2.3-->
        <jsp.api.version>2.1</jsp.api.version>
        <stax.version>1.2.0</stax.version>
        <javax.mail.version>1.4</javax.mail.version>
        <struts1.version>1.3.8</struts1.version>
        <struts2.version>2.2.1</struts2.version>
        <ognl.version>3.0</ognl.version><!--Struts2/Xwork uses 3.0-->
        <javassist.version>3.8.0.GA</javassist.version><!--Struts2/Xwork uses 3.8.0.GA-->
        <hibernate.version>3.5.1-Final</hibernate.version>
        <commons.lang.version>2.4</commons.lang.version>
        <commons.collections.version>3.1</commons.collections.version><!--Hibernate uses 3.1-->
        <commons.dbutils.version>1.3</commons.dbutils.version>
        <commons.fileupload.version>1.2.1</commons.fileupload.version><!--Struts2/Xwork uses 1.2.1-->
        <commons.io.version>1.3.2</commons.io.version><!--Struts2/Xwork uses 1.3.2-->
        <commons.logging.version>1.1.1</commons.logging.version><!--Struts2/Xwork uses 1.1.1-->
        <commons.chain.version>1.2</commons.chain.version><!--Struts1 uses 1.2-->
        <log4j.version>1.2.14</log4j.version>
        <slf4j.version>1.6.1</slf4j.version><!--Hibernate uses 1.5.8-->
        <logback.version>0.9.26</logback.version>
        <jasperreports.version>3.5.0</jasperreports.version>
        <jfreechart.version>1.0.12</jfreechart.version>
        <commons.email.version>1.2</commons.email.version>
        <joda-time.version>1.6.2</joda-time.version>
        <groovy.version>1.7.5</groovy.version>
    </properties>
    <modules>
        <module>portofino-war</module>
        <module>elements</module>
        <module>elements-struts1</module>
        <module>elements-struts2</module>
        <module>elements-extras</module>
    </modules>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.0.2</version>
                <configuration>
                    <source>1.5</source>
                    <target>1.5</target>
                    <encoding>UTF8</encoding>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>2.3</version>
                <configuration>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.2-beta-3</version>
                <configuration>
                    <descriptors>
                        <descriptor>assembly-os-src.xml</descriptor>
                        <descriptor>assembly-os-bin.xml</descriptor>
                        <descriptor>assembly-commercial-bin.xml</descriptor>
                    </descriptors>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <version>2.1</version>
                <executions>
                    <execution>
                        <id>attach-sources</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>jar-no-fork</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <repositories>
        <repository>
            <id>java.net</id>
            <name>Java.net Repository for Maven</name>
            <url>http://download.java.net/maven/2/</url>
            <layout>default</layout>
        </repository>
        <repository>
            <id>jboss</id>
            <url>http://repository.jboss.com/maven2</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>
</project>
