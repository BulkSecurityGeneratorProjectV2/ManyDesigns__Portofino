<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.manydesigns</groupId>
    <artifactId>portofino</artifactId>
    <packaging>pom</packaging>
    <version>4.0.rc9</version>
    <name>manydesigns-portofino</name>
    <url>http://www.manydesigns.com/</url>
    <properties>
        <servlet.api.version>2.4</servlet.api.version><!--Struts2/Xwork uses 2.4 - JFreeChart uses 2.3-->
        <jsp.api.version>2.0</jsp.api.version>
        <jstl.version>1.1.2</jstl.version>
        <stax.version>1.2.0</stax.version>
        <jaxb-api.version>2.1</jaxb-api.version>
        <jaxb-impl.version>2.1.13</jaxb-impl.version>
        <javax.mail.version>1.4</javax.mail.version>
        <struts1.version>1.3.8</struts1.version>
        <struts2.version>2.2.1</struts2.version>
        <stripes.version>1.5.6</stripes.version>
        <ognl.version>3.0</ognl.version><!--Struts2/Xwork uses 3.0-->
        <antlr.version>2.7.6</antlr.version><!-- Hibernate uses 2.7.6 - Struts1 uses 2.7.2 (excluded)-->
        <javassist.version>3.8.0.GA</javassist.version><!--Struts2/Xwork uses 3.8.0.GA-->
        <hibernate.version>3.6.9.Final</hibernate.version>
        <commons.lang.version>2.5</commons.lang.version>
        <commons.collections.version>3.1</commons.collections.version><!--Hibernate uses 3.1, Commons-configuration uses 3.2.1-->
        <commons.dbutils.version>1.3</commons.dbutils.version>
        <commons.fileupload.version>1.2.1</commons.fileupload.version><!--Struts2/Xwork uses 1.2.1-->
        <commons.io.version>2.0.1</commons.io.version><!--Struts2/Xwork uses 1.3.2-->
        <commons.logging.version>1.1.1</commons.logging.version><!--Struts2/Xwork uses 1.1.1-->
        <commons.chain.version>1.2</commons.chain.version><!--Struts1 uses 1.2-->
        <commons.email.version>1.2</commons.email.version>
        <commons.configuration.version>1.6</commons.configuration.version>
        <log4j.version>1.2.14</log4j.version>
        <slf4j.version>1.6.1</slf4j.version><!--Hibernate uses 1.5.8-->
        <logback.version>0.9.26</logback.version>
        <jasperreports.version>3.5.0</jasperreports.version>
        <jfreechart.version>1.0.12</jfreechart.version>
        <joda-time.version>1.6.2</joda-time.version>
        <groovy.version>1.8.0</groovy.version>
        <json.version>20111031</json.version>
        <liquibase.version>2.0.1</liquibase.version>
        <itext.version>2.1.7</itext.version>

        <!--<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>-->
    </properties>
    <modules>
        <module>elements</module>
        <module>elements-extras</module>
        <module>portofino-core</module>
        <module>portofino-web</module>
        <module>portofino-war</module>
        <module>portofino-pageactions-extras</module>
        <module>mail</module>
    </modules>
    
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.0.2</version>
                <configuration>
                    <source>1.5</source>
                    <target>1.5</target>
                    <encoding>UTF8</encoding>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.3.1</version>
                <configuration>
                    <archive>
                        <index>true</index>
                        <manifest>
                            <addClasspath>true</addClasspath>
                            <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                        </manifest>
                        <manifestEntries>
                            <mode>development</mode>
                            <url>${project.url}</url>
                            <key>value</key>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>2.3</version>
                <configuration>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.2-beta-3</version>
                <configuration>
                    <descriptors>
                        <descriptor>assembly-os-src.xml</descriptor>
                        <descriptor>assembly-os-bin.xml</descriptor>
                        <descriptor>assembly-commercial-bin.xml</descriptor>
                        <descriptor>assembly-evaluation-bin.xml</descriptor>
                    </descriptors>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <version>2.1</version>
                <executions>
                    <execution>
                        <id>attach-sources</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>jar-no-fork</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
                <version>2.8.1</version>
				<executions>
					<execution>
						<id>attach-javadocs</id>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
            <plugin>
               <groupId>org.codehaus.mojo</groupId>
               <artifactId>cobertura-maven-plugin</artifactId>
               <version>2.3</version>
            </plugin>
      </plugins>
    </build>
